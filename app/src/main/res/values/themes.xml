<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidPos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_suit</item>
        <item name="colorPrimaryDark">@color/black_pearl</item>
        <item name="colorAccent">@color/tory_blue</item>
        <item name="actionBarItemBackground">@color/tory_blue</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="MyDashboardTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/pure_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="fontWeight">700</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="ScreenTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_pearl</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="CardTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CardBody" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="DueBody" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2dp</item>

    </style>
</resources>